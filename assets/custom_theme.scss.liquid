$box-shadow-material:                     0px 2px 2px 0px rgba(0,0,0,0.24);
$box-shadow-material-hover:               0px 4px 8px 0px rgba(0,0,0,0.24);
@mixin small-shadow {
    box-shadow: $box-shadow-material;
    transition:box-shadow 0.2s ease;
};

@mixin active-small-shadow {
    box-shadow: $box-shadow-material;
    transition:box-shadow 0.2s ease;
    &:hover {
      box-shadow: $box-shadow-material-hover;
  };
};


$shadow-panel:0 60px 180px 0 rgba(31,43,57,.22);
@mixin panel-shadow {
  -webkit-box-shadow:  $shadow-panel;
  -moz-box-shadow: $shadow-panel;
  box-shadow:$shadow-panel;
}
@mixin big-shadow {     // depriciated
  -webkit-box-shadow:  $shadow-panel;
  -moz-box-shadow: $shadow-panel;
  box-shadow:$shadow-panel;
}

$shadow-panel-strong:15px 50px 180px 0 rgba(31,43,57,.4);
@mixin panel-shadow-strong{
  -webkit-box-shadow:  $shadow-panel-strong;
  -moz-box-shadow: $shadow-panel-strong;
  box-shadow:$shadow-panel-strong;
}
@mixin  big-shadow-strong {     // depriciated
  -webkit-box-shadow:  $shadow-panel-strong;
  -moz-box-shadow: $shadow-panel-strong;
  box-shadow:$shadow-panel-strong;
